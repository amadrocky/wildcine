{% extends 'layout.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="head-movie">
            <h2>{{ actor.name }}</h2>
        </div>
    </div>
    <div class="movie-back">
        <div class="row justify-content-around">
            <div class="col-3 image-show">
                <img src="{{ actor.image }}">
            </div>
            <div class="col-8">
                {{ include('comment/_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
