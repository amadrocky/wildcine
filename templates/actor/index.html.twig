{% extends 'layout.html.twig' %}

{% block title %}Actors{% endblock %}

{% block body %}
    <h1>Actors</h1>
    <div class="row justify-content-around">
        {% for actor in actors %}
            <div class="col">
                <div class="card">
                    <img class="card-img-top" src="{{ actor.image }}" alt="Card image cap">
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">{{ actor.name }}</h5>
                        <p class="card-text">Country : {{ actor.country }}<br/></p>
                        <a href="{{ path('actor_show', {'id': actor.id}) }}" class="btn btn-primary">About</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
